{
  "name": "snackverse-cp",
  "compatibility_date": "2026-02-09",

  // Worker entry point
  "main": "worker/index.ts",

  // Serve the Next.js static export as assets
  "assets": {
    "directory": "out",
    "binding": "ASSETS"
  },

  // Environment variables
  "vars": {
    // Set this to your WordPress origin hostname or IP.
    // Must NOT route back through this Worker (use a grey-cloud DNS record or raw IP).
    "ORIGIN_HOST": "snackverse5.fixed-staging.co.uk"
  }
}
